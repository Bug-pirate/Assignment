# Database
MONGODB_URI=mongodb://localhost:27017/noteapp

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server
PORT=3000
NODE_ENV=development

# Frontend
CLIENT_ORIGIN=http://localhost:5173

# Google OAuth (fill these when setting up Google OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# SMTP Email (Nodemailer)
# For Gmail enable 2FA and create an App Password (NOT your normal password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=yourgmail@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL="Notes App <yourgmail@gmail.com>"

# Development helpers
EXPOSE_DEV_OTP=true
DISABLE_ETHEREAL=false
